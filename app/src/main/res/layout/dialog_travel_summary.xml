<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    style="@style/Widget.Viaticos.LinearLayout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resumen del Viaje"
        style="@style/TextAppearance.Viaticos.Headline2"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/limiteLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LÃ­mite de gastos:"
        style="@style/Widget.Viaticos.TextView.Primary"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/limiteValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Viaticos.TextView.Secondary"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/gastosLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total gastado:"
        style="@style/Widget.Viaticos.TextView.Primary"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/gastosValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Viaticos.TextView.Secondary"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/diferenciaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diferencia:"
        style="@style/Widget.Viaticos.TextView.Primary"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/diferenciaValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Viaticos.TextView.Secondary"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/estadoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado:"
        style="@style/Widget.Viaticos.TextView.Primary"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/estadoValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Viaticos.TextView.Secondary"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonAceptar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        style="@style/Widget.Viaticos.Button"/>

</LinearLayout> 